<div class="container">
  <div>
    <h1>SOMEONE WANTS THESE SHOES BRAH</h1>
  </div>
  <div class="cards">
    <% @rentals.each do |rental| %>
      <div class="card-trip">
        <% if rental.shoe.photo.attached? %>
          <%= cl_image_tag rental.shoe.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <p>no photo</p>
        <% end %>
        <h2 class="shoe-size">size: <%= rental.shoe.size %></h2>
        <div class="card-trip-infos">
          <h1><%= rental.shoe.name %></h1>
          <div class="card-price">
            <h2 class="card-trip-pricing">price: $<%= rental.shoe.price %></h2>
            <h2 class="card-trip-start-date">start: <%= rental.start_date %></h2>
            <h2 class="card-trip-end-date">end: <%= rental.end_date %></h2>
            <h2 class="card-trip-owner-name">Owner's name: <%= rental.shoe.user.name %></h2>
            <h2 class="card-trip-owner-email">Owner's email: <%= rental.shoe.user.email %></h2>
            <h2 class="card-trip-owner-email">Booking Status: <%= rental.status %></h2>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
              <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
              <label class="btn btn-outline-primary" for="btnradio1">Decline</label>
              <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="on" checked>
              <label class="btn btn-outline-primary" for="btnradio2">Pending</label>
              <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
              <label class="btn btn-outline-primary" for="btnradio3">Confirm</label>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to shoes_path, class:"text-decoration-none text-success" do %>
    Back<i class="fas fa-shoe-prints text-align-center"></i>
  <% end %>
</div>
