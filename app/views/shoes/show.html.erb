<div class="container p-3">
  <div class="cards">
    <%= cl_image_tag @shoe.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="d">
      <h1><%= @shoe.name %></h1>
      <h1><%= @shoe.category %></h1>
      <h1><%= @shoe.size %></h1>
      <h1><%= @shoe.color %></h1>
    </div>
    <%= simple_form_for [ @shoe, @rental ] do |f| %>
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
